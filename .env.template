# Neo4j Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# Authentication Configuration
# =============================================================================
# Set to "true" to use real Firebase Auth, "false" for mock auth (local dev)
USE_REAL_FIREBASE=false

# Environment mode: development | staging | production
ENVIRONMENT=development

# Comma-separated CORS origins
# Example: http://localhost:5173,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173

# Firebase credentials path (only needed if USE_REAL_FIREBASE=true)
# FIREBASE_CREDENTIALS=serviceAccountKey-auth.json

# ============================================================================
# NEO4J DATABASE CONFIGURATION
# ============================================================================

# Neo4j Connection URI
# - For local Neo4j: bolt://localhost:7687
# - For Neo4j Aura: neo4j+s://xxxxx.databases.neo4j.io
# - For Neo4j cluster: neo4j://localhost:7687
NEO4J_URI=bolt://localhost:7687

# Neo4j Authentication
# Default username is 'neo4j'
NEO4J_USER=neo4j

# Your Neo4j password
# IMPORTANT: Change this from the default password after installation
NEO4J_PASSWORD=your_password_here

# ============================================================================
# EXISTING CONFIGURATION (keep these as is)
# ============================================================================

# Add your existing .env variables below this line
# Example:
# DEEPGRAM_API_KEY=your_deepgram_key_here
# GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey-auth.json
